<hr class="">
  <div class="container target fixed" style="color: black;">
    <div class="row">
      <!-- <div class="col-sm-2">
        <a href="#" class="pull-right">
          <img title="profile image" class="img img-responsive" src="http://rlsandbox.com/img/profile.jpg">
        </a>
      </div> -->
      <div class="col-sm-12">
        <div>
          <img class="img-circle center" src="http://www.rlsandbox.com/img/profile.jpg">
          <h1><%= current_user.name %></h1>
          <h1 class="btn btn-default">
            <%= link_to 'Edit Profile', "/users/#{current_user.id}/edit" %>
          </h1>
        </div>
      </div>
    </div>
    <br>
    <hr />
    <div class="row">
      <div class="col-sm-3">
        <!--left col-->
        <ul class="list-group">
          <li class="list-group-item text-muted" contenteditable="false">User Details</li>
          <li class="list-group-item text-right">
            <span class="pull-left">
              <strong class="">Joined: </strong>
            </span><%= current_user.created_at %>
          </li>
          <li class="list-group-item text-right">
            <span class="pull-left">
              <strong class="">Updated: </strong>
            </span><%= current_user.updated_at %>
          </li>
          <li class="list-group-item text-right">
            <span class="pull-left">
              <strong class="">Name: </strong>
            </span><%= current_user.name %>
          </li>
          <li class="list-group-item text-right">
            <span class="pull-left">
              <strong class="">Email: </strong>
            </span><%= current_user.email %>
          </li>
        </ul>
        <ul class="list-group">
          <li class="list-group-item text-muted">Activity 
            <i class="fa fa-dashboard fa-1x"></i>
          </li>
          <li class="list-group-item text-right">
            <span class="pull-left">
              <strong class="">Posted Products</strong>
            </span><%= current_user.products.count %>
          </li>
          <li class="list-group-item text-right">
            <span class="pull-left">
              <strong class="">Reviews</strong>
            </span><%= current_user.reviews.count %>
          </li>
        </ul>
      </div>
    <!--/col-3-->
    <div class="col-sm-9" contenteditable="false" style="">
      <div class="panel panel-default">
        <div class="panel-heading">About <%= current_user.name %></div>
          <div class="panel-body">
            <p><%= current_user.about_me %></p>
          </div>
        </div>
      </div>
    <div class="col-sm-9" contenteditable="false" style="">
      <div class="panel panel-default">
        <div class="panel-heading"><%= current_user.name %>'s Reviews</div>
          <div class="panel-body">
            <p>
              <% current_user.reviews.order("created_at DESC").each do |review| %>
              <p>
                <% if review.user != nil %>
                  <% if review.product != nil %>
                    <h4 style="color:blue;"><%= review.comment %></h4>
                    <h5 style="color:red;"><%= review.product.name %></h5>
                    <em>by <b><%= review.user.name %></b></em>
                    <u>Added on: <%= review.created_at %></u>
                  <% end %>
                <% end %>
              <br>
              </p>
            <hr style="width:40px;"/>
            <% end %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
<script src="/plugins/bootstrap-pager.js"></script>
</div>