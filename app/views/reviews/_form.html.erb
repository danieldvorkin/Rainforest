<%= form_for([@product, @review], remote: true) do |f| %>
    <%= render partial: 'reviews/review_form_errors' %>
    
    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_area :comment, size: "45x5"%>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>