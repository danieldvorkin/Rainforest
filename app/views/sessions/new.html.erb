<div style="text-align:center; color: black;">
<h1>Please Log In </h1>

<div class="well">
<%= form_tag sessions_path, method: :post do %>
	<div class="field">
		<%= label_tag :email %><br />
		<%= text_field_tag :email, params[:email] %>
	</div>
	<div class="field">
		<%= label_tag :password %><br />
		<%= password_field_tag :password %>
	</div>
	<div class="actions"><%= submit_tag "Log in" %></div><br />	
		<p class="btn btn-default"><%= link_to 'Back', "/products/" %></p>
<% end %>
</div>
</div>