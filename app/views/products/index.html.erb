<div style="text-align:center;">
<h1>Welcome to the HomePage</h1>
<p class="btn btn-default">
	<%= link_to 'New Item', "/products/new" %>
</p>
<hr />

<% @products.each do |product| %>
  <p>
		Name:
			<%= product.name %><br>
		Description: 
			<%= product.description %><br>
		Price($): 
			<%= product.formatted_price %><br>
	</p>
	<p class="btn btn-default">
		<%= link_to 'Delete', "/products/#{product.id}", method: :delete, data: {confirm: "Are you sure you want to delete this product?"} %>
	</p>
	<p class="btn btn-default">
		<%= link_to 'Edit', "/products/#{product.id}/edit" %>
	</p>
	<div class="btn btn-default">
		<%= link_to 'Leave a review', "/products/#{product.id}" %>
	</div>
	<div class="btn btn-default">
		<%= link_to 'Reviews', "/products/#{product.id}/reviews/#{product.id}" %>
	</div>
	<hr />
<% end %>
</div>