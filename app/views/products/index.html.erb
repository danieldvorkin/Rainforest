<div style="text-align:center;">
	<h1> AP :: Uniforms</h1>
	<hr />
	<div class="container">
		<div class="row">	
			<% @products.order("created_at DESC").each do |product| %>
				<div class="col-sx-6 col-md-4 col-lg-3">
				  <h3 style="color: red;">
						<i style="color: blue;"><%= product.name %></i>
					</h3>
					<h4>
						Description: <%= product.description %><br>
						Price: $ <%= product.formatted_price %><br>
					</h4>

					<div class="btn btn-default">
						<%= link_to 'Delete', "/products/#{product.id}", method: :delete, data: {confirm: "Are you sure?"} %>
					</div>
					<div class="btn btn-default">
						<%= link_to 'Edit Item', "/products/#{product.id}/edit" %>
					</div>
					<div class="btn btn-default">
						<%= link_to 'Reviews', "/products/#{product.id}/reviews/#{product.id}" %>
					</div>
					<hr style="width: 200px;">
				</div>
			<% end %>
		</div>
	</div>
</div>