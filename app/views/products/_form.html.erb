<div style="text-align:center;">
<%= form_for(@product) do |f| %>
	<% if @product.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:
			</h2>

			<ul>
				<% @product.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="field">
		<%= f.text_field :name, placeholder: "Product Name", size: "25x10" %>
	</div><br>
	<div class="field">
		<%= f.text_area :description, placeholder: "Product Description", size: "28x4" %>
	</div><br>
	<div class="field">
		<%= f.number_field :price_in_cents, placeholder: "Price in cents"%>
	</div><br />
	<div class="actions">
		<%= f.submit %>
	</div>
	<div class="btn btn-default"><%= link_to 'Back', products_path %></div>
<% end %>
</div>